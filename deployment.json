{
    "apiVersion":"apps/v1",
    "kind":"Deployment",
    "metadata":{
       "name":"capstone-app",
       "labels":{
          "app":"capstone"
       }
    },
    "spec":{
       "replicas":1,
       "selector":{
          "matchLabels":{
             "app":"capstone"
          }
       },
       "template":{
          "metadata":{
             "labels":{
                "app":"capstone"
             }
          },
          "spec":{
             "containers":[
                {
                   "name":"capstone",
                   "image":"josemay343/capstone-app",
                   "ports":[
                      {
                         "name":"http-server",
                         "containerPort":3000
                      }
                   ]
                }
             ]
          }
       }
    }
 }